                                </GridColumn>
                                <GridColumn TItem="Plngen" HeaderText="Abrege">
                                    <ChildContent Context="item">
                                        @if (AddingPlnRowGuid == item.Rowguid)
                                        {
                                            <InputText @bind-Value="item.Abg" />
