                                        {
                                            <button class="btn btn-sm btn-success d-flex align-items-center" @onclick="() => IncludePlan(item)">
                                                <span class="me-1">💾</span> Inclure
                                            </button>
                                        }
                                    </ChildContent>
                                </GridColumn>
                            </GridColumns>
                        </Grid>
                    </div>
                </BodyTemplate>
                <FooterTemplate>
                    <Button class="btn btn-secondary" @onclick="AnuPlnModal">Annuler</Button>
                    <Button class="btn btn-success" @onclick="ConfPlnModal">Confirmer</Button>
                </FooterTemplate>
            </Modal>
