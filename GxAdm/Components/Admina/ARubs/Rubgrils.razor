                                        <option value="@tob.Elea" @onclick="() => SelPlanTier(tob.Elea)">@tob.Liba</option>
                                    }
                                </InputSelect>
                                <label class="fw-bold">Attribut :</label>
                                <InputSelect @bind-Value="IMyAtr" class="me-3" style="width:auto">
                                    <option class="jchx" value="0">?util</option>
                                    @foreach (var tob in LsAtrs) //.Where(ut => ut.Gvars == 62 && ut.Itb == 1 && ut.Elea != 0 && ut.Gp2 == IMyDom))
                                    {
                                        <option value="@tob.Elea" @onclick="() => SelPlanAtr(tob.Elea)">@tob.Liba</option>
                                    }
                                </InputSelect>
                                <label class="fw-bold">Base :</label>
                                <InputSelect @bind-Value="IMyVue" class="me-3" style="width:auto">
                                    <option class="jchx" value="0">?util</option>
                                    @foreach (var tob in LsVues) //.Where(ut => ut.Gvars == 62 && ut.Itb == 1 && ut.Elea != 0 && ut.Gp2 == IMyDom))
                                    {
                                        <option value="@tob.Gp2" @onclick="() => SelPlanVue(tob.Elea)">@tob.Liba</option>
                                    }
                                </InputSelect>
                            </div>
                        </div>
                        <div class="row">
                            @if (!String.IsNullOrEmpty(Kmessage))
                            {
                                    <span class="bg-info bg-opacity-10" style="font-style:italic;color:red">&nbsp;--> @Jmessage</span>
                            }
