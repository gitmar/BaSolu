                                                @if (EditingPlnRowGuid == item.Rowguid)
                                                {
                                                    <button class="btn btn-sm btn-success" @onclick="() => ConfEdingPln(item)">
                                                        💾 Accept
                                                    </button>
                                                    <button class="btn btn-sm btn-secondary" @onclick="() => CancEdingPln(item)">
                                                        ❎ Cancel
                                                    </button>
