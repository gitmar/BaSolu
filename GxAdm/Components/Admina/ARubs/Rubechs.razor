    // Remove from parent collection
    private void RemoveFromParentCollection<T>(T entity)
    {
        // Plngen: top-level
        if (entity is Plngen pln && MyDaPlans.Any(p => p.Rowguid == pln.Rowguid))
            MyDaPlans.Remove(pln);
        // Rubvar: parent Plngen.Rubvars
        else if (entity is Rubvar rub)
        {
            var parent = MyDaPlans.FirstOrDefault(p => p.Id == rub.Ipln);
            parent?.Rubvars?.Remove(rub);
        }
        // Rubfmt: parent Rubvar.Rubfmts
        else if (entity is Rubfmt fmt)
        {
            var parentRub = MyDaPlans.SelectMany(p => p.Rubvars).FirstOrDefault(r => r.Id == fmt.Irub);
            parentRub?.Rubfmts?.Remove(fmt);
        }
    }
