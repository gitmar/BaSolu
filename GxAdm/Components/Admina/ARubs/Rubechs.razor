                if (draftPln == null) return;
                var pln = (Plngen)(object)gridItem;
                pln.Liba = draftPln.Liba; //designation
                pln.Abg = draftPln.Abg; //abrege
                pln.Fpsrc = draftPln.Fpsrc; //formule-non valider
                pln.Eta = draftPln.Eta; //etat
