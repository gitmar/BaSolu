            case nameof(Rubvar):
                if (draftRub == null) return;
                var rub = (Rubvar)(object)gridItem;
                rub.Liba = draftRub.Liba; //designation
                rub.Abg = draftRub.Abg; //abrege
                rub.Scdrub = draftRub.Scdrub; //code
