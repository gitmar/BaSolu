    //unified Edit-Cancel Action
    private async Task UnifiedEditAction<T>(T gridItem, bool isConfirm, IList<T> localCollection, string entitySet) where T : class
    {
        if (gridItem == null) return;
        var rowguid = ((dynamic)gridItem).Rowguid;
        if (isConfirm)
        {
            // Copy draftPln values → gridItem
            CopyDraftToGridItem<T>(gridItem);
            //Console.WriteLine($"Liba entered : {((dynamic)gridItem).Liba} et draft Liba {draftPln.Liba}");
            if (!ValidateEntity(gridItem)) return;
            var ingridItem = (dynamic)gridItem;
            var isNewAdd = ingridItem.Xadd1 == -1;
            if (isNewAdd)
            {
                // 🔥 ADD CONFIRM: Convert Xadd1=-1 → normal modified entity
                SetFlags(ingridItem, 0, -1, 0);  // Xadd1=0, Xedt1=-1 (edit flag) ✓
                Console.WriteLine("✅ Add confirmed → now edit-modified");
            }
            else
            {
                // 🔥 NOW mark as Modified (user confirmed changes)
                if (!curODContext.Context.Entities.Any(e => e.Entity == gridItem))
                    curODContext.Context.AttachTo(entitySet, gridItem);

                CopyDraftToGridItem<T>(gridItem);  // Copy edited values
                curODContext.Context.UpdateObject(gridItem);  // ← MOVED HERE!

                await NotifyPendingChanges();  // Guard ↑ NOW!
                MarkAsModified(gridItem, entitySet);
            }
            ResetRowState(rowguid);
            SetLightBackground(ingridItem.Rowguid, false);  // Back to normal
            ResetEntityUIState<T>();
            await NotifyPendingChanges();  // ✅ Only on confirm
            StateHasChanged();
        }
        else
        {   //Cancel
            var isNewAdd = ((dynamic)gridItem).Xadd1 == -1;
            if (isNewAdd)
            {
                // Remove new row
                if (curODContext.IsEntityTracked((dynamic)gridItem))
                    curODContext.Context.Detach((dynamic)gridItem);
                if (localCollection.Contains(gridItem))
                    localCollection.Remove(gridItem);  // Remove from UI ✓
                await NotifyPendingChanges();

                Console.WriteLine("🗑️ New add canceled → row removed");
            }
            else
            {
                ClearDraft<T>();
            }
            Imessage = "";
            ResetRowState(rowguid);
            ResetEntityUIState<T>();
            // 🔥 NO NotifyPendingChanges() on cancel!
            StateHasChanged();
        }
    }
