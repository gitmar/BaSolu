    void IncludePlan(Plngen aglne)
    {
        // Use parent Idrub as key to gRubsMap dictionary
        var parentId = curOrga.Idorg;
        bool YaPater = false;
        YaPater = IsPaterValid(aglne);
        if (!YaPater) return;
        Imessage = "";
        if (!curODContext.IsEntityTracked(aglne))
        {
            aglne.Xadd1 = 0;
            Console.WriteLine($"First enter of Include : {aglne.Id}");
            curODContext.AddObject<Plngen>("Plngens", aglne);
            // Make sure gRubsMap has the parent key initialized
            if (!gPlnsMap.ContainsKey(parentId))
            {
                gPlnsMap[parentId] = new List<Plngen>();
            }
            // Add only if the poste with same Rowguid not already present
            if (!gPlnsMap[parentId].Any(p => p.Idorg == aglne.Idorg))
            {
                gPlnsMap[parentId].Add(aglne);
            }
            //Console.WriteLine("BEFORE SAVED");
            //curODContext.SaveDataAsync();
            AddingPlnRowGuid = Guid.Empty;
            curOrga.Plngens.Add(aglne);
            siPlnAdding = false;
            StateHasChanged();
            Imessage = "Success... programme ajoute";
        }
        else
        {
            aglne.Xadd1 = 0;
            Imessage = "Deja ajoute";
        }
        siPlnAdding = false;
    }
