    Plngen CreateNewPlan(int nextSeq)
    {
        if (curOrga == null || IMyGpln == 0 || IMyAtr == 0 || allEnable == false)
        {
            Imessage = "REFUS, Type Plan/Domaine... obligatoire";
            return new Plngen();
        }

        try
        {
            var plan = new Plngen()
            {
                //Rowguid = Guid.NewGuid(),
                Iui = nextSeq,
                Idorg = curOrga.Idorg,
                Ptyp = IMyGpln,
                Todom = IMyDom,
                Liba = "",
                Abg = "",
                Styp = 0,
                Eta = 1,
                //Iele = 0,
                Xadd1 = -1
            };

            switch (IMyGpln)
            {
                case 2: //echeancier
                    plan.Totyp = 0; //IMyGtie; // 1cible2operat3client
                    plan.Tovue = 0; 
                    plan.Toatr = 0; // 1categoriel2fonction#indiv (grille)
                    //plan.Belea = nextSeq;
                    break;
                case 3: //grille
                    plan.Totyp = IMyGtie;
                    plan.Toatr = IMyAtr;
                    plan.Tovue = 0;
                    //plan.Belea = nextSeq;
                    break;
                case 4: //schemas
                    plan.Totyp = 0;
                    plan.Tovue = IMyVue;
                    plan.Toatr = 0;
                    //plan.Belea = nextSeq;
                    break;
                case 5: //programme
                    plan.Totyp = 0;
                    plan.Tovue = IMyVue;
                    plan.Toatr = 0;
                    //plan.Belea = nextSeq;
                    break;
                case 6: //ventilation
                    plan.Totyp = 0;
                    plan.Tovue = IMyVue;
                    plan.Toatr -= 0;
                    //plan.Belea = nextSeq;
                    break;
                default:
                    return new Plngen();
            }
            return plan;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"1Probleme EntityManagment : {ex.Message}");
            return new Plngen();
        }
    }

