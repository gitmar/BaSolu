                                  @* <h2 class="child-box">Hello RECEPTION</h2> *@
                              </ChildContent>
                          </PrubSaie>
                        }
                        else if (chxMenu == 2)
                        { //CALCULS
                          <PrubCalc @ref="mygclc" 
                                   ChxMenu="@chxMenu"
                                   curOrga="@curOrga"
                                   toChild="@toChild"
                                   curODContext="@curODContext">
                              <ChildContent>
                              </ChildContent>
                          </PrubCalc>
                        }
                        else if (chxMenu == 3)
                        { //VENTILATIONS
                          <PrubVent @ref="mygvnt"
                                    ChxMenu="@chxMenu"
                                    curOrga="@curOrga"
                                    toChild="@toChild"
                                    curODContext="@curODContext">
                              <ChildContent>
                                  @* <h2 class="child-box">Hello RECEPTION</h2> *@
                              </ChildContent>
                          </PrubVent>
                        }
                        else if (chxMenu == 3)
                        { //CALCULS
                            //ref="mygclc"
                        }
                }
            </div>
        </div>
    </div>
}
